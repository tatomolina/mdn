<h1 class"h1r">Pedidos</h1>

<br/><br/>

<div>
  <div>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Cliente</th>
            <th scope="col">Direccion</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          <% if @orders.present? %>
          <% x=0 %>
            <% @orders.each do |order| %>
              <tr>
                <th scope="row"><%= x+=1 %></th>
                <td>
                  <%= link_to order.client.name, order.client %>
                </td>
                <td>
                  <%= order.direction %>
                </td>
                <td>
                  <%= order.created_at.to_date.to_formatted_s(:iso8601) %>
                </td>
                <td>
                  <%= link_to "Ver", order_path(order) %>
                  <%= link_to "Editar", edit_order_path(order) %>
                  <%= link_to 'Eliminar', order_path(order),
                        method: :delete, data: { confirm: 'Estas seguro?' } %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <div>
      <p>
        <%= link_to 'Nuevo Pedido', new_order_path, class: "btn btn-outline-primary" %>
      </p>
    </div>
  </div>
</div>
