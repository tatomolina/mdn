<div class="row justify-content-center">
  <h1 class"h1">Pedidos</h1>
</div>

<div>
  <div>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Cliente</th>
            <th scope="col">Direccion</th>
            <th scope="col">Fecha</th>
            <th scope="col">Procesado</th>
            <th scope="col">Entregado</th>
            <th scope="col">Facturado</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% if @orders.present? %>
          <% x=0 %>
            <% @orders.each do |order| %>
              <tr>
                <th scope="row"><%= x+=1 %></th>

                <td> <%= link_to order.client.name, order.client %> </td>
                <td> <%= order.direction %> </td>
                <td> <%= order.created_at.to_date.to_formatted_s(:iso8601) %> </td>

                <td><%= check_box "order", "done?", {:checked => order.done?, :disabled => true}%></td>
                <td><%= check_box "order", "delivered?", {:checked => order.delivered?, :disabled => true}%></td>
                <td><%= check_box "order", "invoiced?", {:checked => order.invoiced?, :disabled => true}%></td>

                <td>
                  <%= link_to "Ver", order_path(order) %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <div>
      <div class="row justify-content-center">
        <% if policy(Order).new? %>
          <%= link_to 'Nuevo Pedido', new_order_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
