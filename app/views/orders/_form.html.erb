<%= form_for @order do |form| %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <div class="text-center">
        <h3><%= form.label :client, "Cliente" %></h3>
      </div>
      <%= form.select(:client_id, Client.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: false , class: "form-control" })%>
      <div class="text-center">
        <h3><%= form.label :direction, "Direccion" %></h3>
      </div>
      <%= form.text_field :direction, class: "form-control text-center" %>
      <br/>
      <div class="text-center">
        <%= form.submit :class => "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>
