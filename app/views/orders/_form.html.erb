<%= form_for @order do |form| %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <div class="text-center">
        <h3><%= form.label :direction %></h3>
      </div>
      <%= form.text_field :direction, class: "form-control text-center" %>
      <div class="text-center">
        <h3><%= form.label :date %></h3>
      </div>
      <%= form.date_field :date, class: "form-control text-center" %>
      <br/>
      <div class="text-center">
        <%= form.submit :class => "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>
